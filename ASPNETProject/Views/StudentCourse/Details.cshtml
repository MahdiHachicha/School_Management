@model ASPNETProject.Models.StudentCourse

@{
    ViewData["Title"] = "Details";
}

<h1>Registrartion Details</h1>

<div>
    <h4>Registrartion Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student):
            @ViewBag.studentName
        </dt>
        <dd class="col-sm-10">
            <strong>ID:</strong>
            @Html.DisplayFor(model => model.Student.StudentId) 
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course):
            @ViewBag.CourseName
        </dt>
        <dd class="col-sm-10">
            <strong>ID:</strong>
            @Html.DisplayFor(model => model.Course.CourseId)
            
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@Model.StudentCourseId">Edit</a> 
    <a class="btn btn-outline-info" asp-action="Index">Back to List</a>
</div>
